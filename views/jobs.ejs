<h2>Jobs List</h2>
<div id="jobs-container">
  <div id="message"></div>
  <table id="jobs-table">
    <tr id="jobs-table-header">
      <th>Company</th>
      <th>Position</th>
      <th>Status</th>
      <th colspan="2"></th>
    </tr>

    <% if (jobs && jobs.length > 0) { %>
      <% jobs.forEach((job) => { %>
        <tr data-job-id="<%= job._id %>">
          <td><%= job.company %></td>
          <td><%= job.position %></td>
          <td><%= job.status %></td>
          <td>
            <button type="button" class="editButton" data-id="<%= job._id %>">edit</button>
          </td>
          <td>
            <button type="button" class="deleteButton" data-id="<%= job._id %>">delete</button>
          </td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr>
        <td colspan="5">No jobs found.</td>
      </tr>
    <% } %>
  </table>

  <button id="add-job" type="button">Add Job</button>
  <button id="logoff" type="button">Log off</button>
</div>

<%- include("partials/footer.ejs") %>

<script src="/js/main.js"></script>